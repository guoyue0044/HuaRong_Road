<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/pt_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间 : 0"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#FF0000"/>
    <LinearLayout
        android:id="@+id/pt_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/pt_ib_00x00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_1"
            android:padding="10dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_00x01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_2"
            android:padding="10dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_00x02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_3"
            android:padding="10dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_00x03"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_4"
            android:padding="10dp"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pt_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/pt_ib_01x00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_5"
            android:padding="10dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_01x01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_6"
            android:padding="10dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_01x02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_7"
            android:padding="10dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_01x03"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_8"
            android:padding="10dp"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pt_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/pt_ib_02x00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_9"
            android:padding="15dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_02x01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_10"
            android:padding="15dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_02x02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_11"
            android:padding="15dp"
            android:onClick="onClick" />
        <ImageButton
            android:id="@+id/pt_ib_02x03"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_12"
            android:padding="15dp"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pt_line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/pt_ib_03x00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_13"
            android:padding="11dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_03x01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_14"
            android:padding="11dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_03x02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_15"
            android:padding="11dp"
            android:onClick="onClick" />
        <ImageButton
            android:id="@+id/pt_ib_03x03"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/img_16"
            android:padding="11dp"
            android:onClick="onClick"
            android:visibility="invisible"/>
        //

    </LinearLayout>

    <Button
        android:id="@+id/pt_btn_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="restart"
        android:layout_gravity="center"
        android:text="重新开始"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/pt_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/yangtu"
        android:layout_marginTop="20dp"/>
</LinearLayout>